<h1>Registro en el sistema</h1>

<form action="/usuarios/registro" method="POST">
	<% if (locals.error) { %>
		<p><strong><%= locals.error %></strong></p>
	<% } %>
	<div><label>Nombre usuario:</label> <input type="text" name="username" value="<%= datos.username %>" /><%- helpers.error(errores, 'username') %></div>
	<div><label>Nombre:</label> <input type="text" name="nombre" value="<%= datos.nombre %>" /><%- helpers.error(errores, 'nombre') %></div>
	<div><label>Contraseña:</label> <input type="password" name="password" /><%- helpers.error(errores, 'password') %></div>
	<div><label>Repetir contraseña:</label> <input type="password" name="passwordConfirmacion" /><%- helpers.error(errores, 'passwordConfirmacion') %></div>
	<div><button type="submit">Registrar</button></div>
</form>
