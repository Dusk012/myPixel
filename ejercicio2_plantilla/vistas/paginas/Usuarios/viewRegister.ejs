<body>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="error-messages">
            <h3>Errores:</h3>
            <ul>
                <% errors.forEach(msg => { %>
                    <li><%= msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <% if (locals.error) { %>
		<p><strong><%= locals.error %></strong></p>
	<% } %>

    <h2>Bienvenido a MyPixel, Regístrate</h2>
    <form action="/usuarios/register" method="POST" enctype=" "  id="registro">
        
        <fieldset>
            <legend>Datos de Registro</legend>
            <p>
                <label>Nombre:</label>
                <input type="text" name="nombre" value="<%= datos.nombre %>" /><%- helpers.error(errores, 'nombre') %>
            </p>
            
            <p>
                <label>Username:</label>
                <input type="text" name="username" value="<%= datos.username %>" /><%- helpers.error(errores, 'username') %> <span class="error"></span><span class="feedback"></span>
            </p>

            <p>
                <label >Contraseña:</label>
                <input type="password" name="password"><%- helpers.error(errores, 'password') %>
            </p>

            <p>
                <label >Confirmar_Contraseña:</label>
                <input type="password" name="confirmPassword"><%- helpers.error(errores, 'confirmPassword') %>
            </p>

           

            <button type="submit">Registrarse</button>
        </fieldset>
    </form>
</body>
<script src="/js/fetch.js"></script>
<script src="/js/04-registro.js"></script>

