<body>
  <div class="challenge-container">
    <h1>Desafío:</h1>
    <h1>¡Da 5 Likes!</h1>
    <div class="progress-bar">
      <div id="progress" class="progress">0%</div>
    </div>
    <p>Likes: <span id="likes">0</span> / <span id="target">5</span></p>
  </div>

  <script>
    const targetLikes = 5; // Número de likes requeridos para completar el desafío
    let currentLikes = 0; // Likes actuales

    const progressBar = document.getElementById('progress');
    const likesText = document.getElementById('likes');

    // Función para actualizar la barra de progreso
    function actualizarProgreso() {
        fetch('/contenido/likes/global')
            .then(response => response.json())
            .then(data => {
                currentLikes = data.globalLikes;
                const displayedLikes = Math.min(currentLikes, targetLikes); // Limitar los likes mostrados al máximo objetivo
                likesText.innerText = displayedLikes;
                const progressPercentage = (displayedLikes / targetLikes) * 100;
                progressBar.style.width = progressPercentage + '%';
                progressBar.innerText = Math.round(progressPercentage) + '%';

                if (progressPercentage >= 100) {
                    progressBar.innerText = '100%';
                }
            })
            .catch(error => console.error('Error al obtener los likes globales:', error));
    }

    // Actualizar la barra de progreso al cargar la página
    actualizarProgreso();

    // Actualizar la barra de progreso cada 5 segundos
    setInterval(actualizarProgreso, 5000);
</script>
</body>
