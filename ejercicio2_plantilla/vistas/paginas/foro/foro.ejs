<% var foro = typeof foro !== 'undefined' ? foro : null; %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= foro ? foro.titulo : "Crear un nuevo foro" %> - Foro</title>
    <link rel="stylesheet" href="/css/estilo.css">
</head>
<body>
    <% if (foro) { %>
        <header>
            <h1><%= foro.titulo %></h1>
        </header>
        <section>
            <p><%= foro.descripcion %></p>
        </section>
        <section>
            <h2>Comentarios</h2>
            <% if (comentarios && comentarios.length > 0) { %>
                <ul>
                    <% comentarios.forEach(comentario => { %>
                        <li>
                            <strong>Usuario <%= comentario.id_usuario %>:</strong>
                            <p><%= comentario.contenido %></p>
                            <small>Publicado el <%= comentario.fecha %></small>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No hay comentarios aún.</p>
            <% } %>
        </section>
        <section>
            <h3>Agregar un comentario</h3>
            <form action="/foro/<%= foro.id %>/comentar" method="POST">
                <textarea name="contenido" required placeholder="Escribe tu comentario aquí..."></textarea>
                <input type="hidden" name="id_usuario" value="<%= session.userId %>">
                <button type="submit">Comentar</button>
            </form>
        </section>
    <% } else { %>
        <section>
            <h1>Crear un nuevo foro</h1>
            <form action="/foros" method="POST">
                <label for="titulo">Título del foro:</label>
                <input type="text" id="titulo" name="titulo" required>
                <label for="descripcion">Descripción:</label>
                <textarea id="descripcion" name="descripcion" required></textarea>
                <input type="hidden" name="id_usuario" value="<%= session.userId %>">
                <button type="submit">Crear Foro</button>
            </form>
        </section>
    <% } %>
</body>
</html>
