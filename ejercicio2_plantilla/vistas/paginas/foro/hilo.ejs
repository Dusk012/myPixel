<body>
    <div id="contenedor">
        <h1><%= forum.titulo %></h1>
        <p class="foro-descripcion">Descripcion del foro: <%= forum.descripcion %></p>
        <hr>

        <% if (replies.length > 0) { %>
            <h2>Respuestas</h2>
            <ul class="reply-lista">
                <% replies.forEach(reply => { %>
                    <li class="reply-item">
                        <p><strong><%= reply.userId %></strong>:</p>
                        <p><%= reply.content %></p>
                        <span class="reply-fecha">🕒 <%= reply.date %></span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No hay respuestas a este post.</p>
        <% } %>

        <hr>

        <h2>Escribe una respuesta:</h2>
        <form class="reply-form" action="/mensajes/reply/<%= forum.id %>" method="POST">
            <label for="content">Comentario:</label><br>
            <textarea name="content" id="content" rows="4" required class="reply-textarea"></textarea><br>
            <button type="submit" class="btn-enviar-respuesta">Publicar comentario</button>
        </form>

        <div class="volver-foro">
            <a href="/mensajes/foro" class="btn-volver">← Volver al foro</a>
        </div>
    </div>
</body>
