<body>
<h1><%= post.content %></h1>
    <p>Publicado por <%= post.userId %> el <%= post.date %></p>
    <hr>

    <% if (replies.length > 0) { %>
        <h2>Respuestas</h2>
        <ul>
            <% replies.forEach(reply => { %>
                <li>
                    <strong><%= reply.userId %></strong>: <%= reply.content %>
                    <p>Publicado el <%= reply.date %></p>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No hay respuestas a este post.</p>
    <% } %>

    <hr>

    <h2>Escribe una respuesta</h2>
    <% if (error) { %>
        <div style="color: red;"><%= error %></div>
    <% } %>
    <form action="/foro/reply/<%= post.id %>" method="POST">
        <label for="content">Contenido:</label><br>
        <textarea name="content" id="content" rows="4" required></textarea><br>
        <button type="submit">Responder</button>
    </form>

    <a href="/foro">Volver al foro</a>
